{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "outDir": "./dist/renderer",
    "rootDir": "./src/renderer",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/renderer/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}