{
  "name": "minimal-journal",
  "version": "1.0.0",
  "description": "A minimalist journal app built with Electron",
  "main": "dist/main/main.js",
  "scripts": {
    "build": "tsc && cp src/renderer/app-browser.js dist/renderer/ && cp src/renderer/index.html dist/renderer/ && cp src/renderer/styles.css dist/renderer/",
    "start": "electron dist/main/main.js",
    "dev": "npm run build && electron dist/main/main.js",
    "test": "playwright test",
    "test:unit": "jest",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "keywords": [
    "journal",
    "electron",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/sqlite3": "^3.1.11",
    "@types/uuid": "^10.0.0",
    "electron": "^27.0.0",
    "electron-builder": "^26.0.12",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.0"
  },
  "build": {
    "appId": "com.example.minimal-journal",
    "productName": "Minimal Journal",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ]
    },
    "dmg": {
      "title": "Minimal Journal",
      "artifactName": "minimal-journal-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "minimal-journal-setup-${version}-${arch}.${ext}"
    },
    "publish": null
  }
}
